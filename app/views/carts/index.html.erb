<% if @items.count >0 %>
	<table class="table">
		<% price_total = 0 
		item_total = 0 %>
	  <thead>
	    <tr>
	      <th scope="col">Item id</th>
	      <th scope="col">User Name</th>
	      <th scope="col">Item quantity</th>
	      <th scope="col">Product Name</th>
	      <th scope="col">Price</th>
	      <th scope="col">Description</th>
	      <th scope="col">Actions</th>
	    </tr>
	  </thead>
	  <tbody>
	  	<% @items.each do |item| %>
	    <tr>
	      <th scope="row"><%= "#{item.id}" %></th>
	      <td>
	      	<%= Cart.find(item.cart_id).user.name %>
				</td>
	      <td>
	      	<div class="btn-group" role="group" aria-label="Basic example">
		      	<%= button_to "-", edit_line_item_path(item),method: :get, class: "btn-sm btn btn-outline-success" %> 
		      	<span style="padding: 0 8px 0 0"><%= item.quantity %></span> 
		      	<% item_total += item.quantity %> 
		      	<%= button_to "+", line_item_path(item), method: :put, class: "btn-sm btn btn-outline-success" %>
					</div>
	      </td>
	      <td>
	      	<%= item.product.product_name %>
	      </td>
	       <% price_total += (item.product.price * item.quantity) %>
	      <td>
	      	<%= item.product.price * item.quantity %>
	      </td>
	      <td>
	      	<%= item.product.description %>
	      </td>
	      <td>
	      	<div class="btn-group" role="group" aria-label="Basic example">
	      		<%= button_to "Remove", line_item_path(item), method: :delete, class: "btn btn-outline-success" %>
	      		<%= button_to "Buy", order_path(item), method: :get, class: "btn btn-outline-success"%>
	      	</div>
	    	</td>
	    </tr>
	    <% end %>
	  </tbody>
	</table>

	<table class="table">
	  <thead>
	    <tr>
	      <th scope="col">Total Items </th>
	      <th scope="col">Total Price</th>
	      <th scope="col"></th>
	    </tr>
	  </thead>
	  <tbody>
	    <tr>
	      <td>
	      	<%= item_total %>
				</td>
	      <td><%= "#{price_total}" %></td>
	      <td><%=link_to "Buy All", products_path%></td>
	    </tr>
	  </tbody>
	</table> 
<% else %>
<h1>Add Items To Cart</h1>
<%= button_to "Go To Home Page", products_path, class: "btn btn-outline-success", method: :get %> 
<% end %>