<div style="display: flex;">	
	<% if @items.count >0 %>
		<div class="container cart_item">
			<% price_total = 0 %> <% item_total = 0 %>
			<% @items.each do |item| %>
		    <div class="row my-4">
		    	<div class="col-sm-3">
		    		<%= image_tag item.product.images.first, size: "200x200" %>
		    	</div>
		    	<div class="col-sm-6">
		    		<%= item.product.product_name %>
		    		<br />
		    		<%= item.product.description %>
		    		<br />
		    		Rs.<%= item.product.price * item.quantity %>
		    	</div>
		    	<div class="col-sm-3">
		    		<strong>Delivery by <%= delivery_date %></strong>
		    		<p><span style="color: green;"> Free</span>₹40</p>
		    	</div>
		    </div>
		    <div class="row" style="margin-top: 25px;">
		    	<div class="col-auto">
		    		<div class="btn-group" role="group" aria-label="Basic example">
			      	<%= button_to "-", edit_line_item_path(item),method: :get, class: "btn-sm btn btn-outline-success" %> 
			      	<span style="padding: 0 8px 0 0"><%= item.quantity %></span> 
			      	<% item_total += item.quantity %> 
			      	<%= button_to "+", line_item_path(item), method: :put, class: "btn-sm btn btn-outline-success" %>
						</div>
						<% price_total += (item.product.price * item.quantity) %>
					</div>
					<div class="col-auto">
						<div class="btn-group" role="group" aria-label="Basic example">
		      		<%= button_to "Remove", line_item_path(item),data: { confirm: "Are you sure?"}, method: :delete, class: "btn btn-outline-success" %>
		      		<%= link_to "Buy", new_order_path(id: item.id), method: :get, class: "btn btn-outline-success"%>
		      	</div>
		      </div>
				</div>
			<% end %>
			<br />
			<br />
			<table class="table">
			  <thead>
			    <tr>
			      <th scope="col"></th>
			      <th scope="col"></th>
			      <th scope="col"></th>
			    </tr>
			  </thead>
			  <tbody>
			    <tr>
			      <td>
						</td>
			      <td></td>
			      <td>
				      <div class="buy-all">
					      <% if @items.count > 1 %>
					      	<%=link_to "Buy All", new_order_path(id: "#{@items.ids}", method: :get), class: "btn btn-outline-success"%>
					      <% else %>
					      	<%=link_to "Buy All", new_order_path(id: @items.first.id, method: :get), class: "btn btn-outline-success"%>
					      		
					      <% end %>	
					    </div>
				    </td>
			    </tr>
			  </tbody>
			</table> 
		</div>
		<div class="container cart_total">
			<table class="table">
				  <thead>
				    <tr>
				      <th scope="col">PRICE DETAILS </th>
				    </tr>
				  </thead>
				  <tbody>
				    <tr>
				      <td>
				      	Price(<%= item_total %> items)
							</td>
				      <td>₹<%= "#{price_total}" %></td>
				      <% if @items.count > 1 %>
				      	<td><%=link_to "Buy All", new_order_path(id: "#{@items.ids}", method: :get), class: "btn btn-outline-success"%></td>
				      <% else %>
				      	<td><%=link_to "Buy All", new_order_path(id: @items.first.id, method: :get), class: "btn btn-outline-success"%></td>
				      <% end %>	
				    </tr>
				  </tbody>
				</table> 
		</div>
	<% else %>
	<div class="container">
		<h1>Add Items To Cart</h1>
		<%= button_to "Go To Home Page", products_path, class: "btn btn-outline-success", method: :get %> 
		<% end %>
	</div>
</div>

