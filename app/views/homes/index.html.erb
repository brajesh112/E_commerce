
<% if user_signed_in? %>
	<% if current_user.admin? %>
		<%= render "admin_home" %>
	<% elsif current_user.buyer? %>
		<%= render "buyer_home" %>
	<% elsif current_user.seller? %>
		<%= render "seller_home" %>
	<% end %>
	<% else %>
	index.html.erb
	<%= button_to "Log In", new_user_session_path %>
	<%= button_to "Sign Up", new_user_registration_path, method: :get %>
<% end %>

