<div class="container">
	<% unless current_user.admin? %>
		<h1><%= current_user.name %>'s Orders </h1>
	<% end %>
	<% @orders.each do |order| %>
		<% if current_user.admin? %>
			<h1><%= order.user.name %>'s Orders </h1>
	 	<% end %>
		<div class="card my-3">
			<div class="row">
				<div class="col">
					<b>Description:</b>
				</div>
				<div class="col">
					<%= order.description.html_safe%>
				</div>
			</div>
			<div class="row">
				<div class="col">
					<b>Payment Method:</b>
				</div> 
				<div class="col">
					<%= order.payment_method %>
				</div>
			</div>
			<div class="row">
				<div class="col">
					<b>Status:</b>
			 	</div>
			 	<div class="col">
			 		<%= order.status %>
			 	</div>
			</div>
			<div class="row">
				<div class="col">
				<b>Track Id: </b>
				</div>
				<div class="col">
				<%=	order.track_id %>
				</div>
			</div>
			<div class="row">
				<div class="col">
					<b>Delivery Address:</b>
				</div>
				<div class="col">
					<div class="row">
						<div class="col-auto">
							<b>House Number:</b>
						</div>
						<div class="col-auto">
							<%= order.address.house_no%>
						</div>
					</div>
					<div class="row">
						<div class="col-auto">
						 <b>Street Number:</b>
						</div>
						<div class="col-auto">
						 <%= order.address.street%>
						</div>
					</div>
					<div class="row">
						<div class="col-auto">
							<b>Landmark :</b> 
						</div>
						<div class="col-auto">
							<%= order.address.landmark%>
						</div>
					</div>
					<div class="row">
						<div class="col-auto">	
							<b>City :</b> 
						</div>
						<div class="col-auto">
							<%= order.address.city%>	
						</div>
					</div>
					<div class="row">
						<div class="col-auto">	
							<b>state :</b>
						</div>
						<div class="col-auto">
							<%= order.address.state%>
						</div>
					</div>
					<div class="row">
						<div class="col-auto">
							<b>Pincode:</b> 
						</div>
						<div class="col-auto">
							<%= order.address.pin%>
						</div>
					</div>
					<div class="row">
						<div class="col-auto">
							<b>Country:</b>
						</div>
						<div class="col-auto">
						 <%= order.address.country%>
						</div>
					</div>
				</div>
			</div>
	 </div>
			<% if current_user.admin? %>
			 	<%= link_to "Edit Order", edit_order_path(order), class: "btn btn-primary btn-lg " %>
			 	<%= link_to "Edit Shipment", edit_shipment_path(order.shipment), class: "btn btn-primary btn-lg " %>
			<% else %>
				<%= link_to "Show Shipment", shipments_path , class: "btn btn-primary btn-lg " %>
				<% if order.shipment.status != "ordered" %>
					<%= link_to "Track Order", tracking_order_path(order.shipment) , class: "btn btn-primary btn-lg " %>
				<% end %>
			<% end %>
	<% end %>
</div>