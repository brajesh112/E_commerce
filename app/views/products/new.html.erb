<div class="d-flex justify-content-center form-group">
	<h1>Add Product</h1>
</div>
<div class="d-flex justify-content-center form-group">
	<%= form_for @product, url_for: products_path, method: :post  do |f| %>  

		<div class="field ">
			<%= f.label :product_name %><br />
			<%= f.text_field :product_name , class: "form-control" ,autocomplete: "product_name" %><br />
		</div>

		<div class="field ">
			<%= f.label :stock %><br />
			<%= f.number_field :stock , class: "form-control" ,autocomplete: "stock" %><br />
		</div>

		<div class="field ">
			<%= f.label :price %><br />
			<%= f.number_field :price , class: "form-control" ,autocomplete: "price" %><br />
		</div>

		<div class="field ">
			<%= f.label :description %><br />
			<%= f.text_area :description , class: "form-control" ,autocomplete: "description", size: "25x2"%><br />
		</div>

		<div class="field ">
			<%= f.label :images %> <br />
			<%= f.file_field :images, multiple: true, class: "form-control" %><br />
	  </div>

	  <div class="field ">
			<%= f.label :categories %><br />
			<%= f.collection_select :categories ,Product.categories.select{|key| key}, :first, :first, { prompt: "Select a category" },class: 'form-control' %><br />
		</div>

		<div class = "field" >
			<%= f.submit "Add Product" ,class: "btn btn-primary btn-lg btn-block" %>
		</div>

	<% end %>
</div>